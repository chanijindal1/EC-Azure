        <value/>
        <documentation>WAP privkey</documentation>
        <required>1</required>
        <type>textarea</type>
    </formElement>
    <formElement>
        <label>WAP SSH SSH public Key</label>
        <property>wap_public_key</property>
        <value/>
        <documentation>WAP privkey</documentation>
        <required>1</required>
        <type>textarea</type>
    </formElement>
