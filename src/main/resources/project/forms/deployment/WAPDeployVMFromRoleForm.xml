        <label>IP Allocation Method</label>
        <property>vm_role_allocation_meth</property>
        <value/>
        <documentation>Allocation method, usually static or dynamic</documentation>
        <required>1</required>
        <type>entry</type>
    </formElement>

    <formElement>
        <label>Hostname pattern:</label>
        <property>vm_role_hostname_pattern</property>
        <value/>
        <documentation>Computer hostname pattern, Computer### for example</documentation>
        <required>1</required>
        <type>entry</type>
