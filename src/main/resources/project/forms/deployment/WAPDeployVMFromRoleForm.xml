        <property>tenant_id</property>
        <value/>
        <documentation>Tenant ID(subscribption id) for the WAP service</documentation>
        <required>1</required>
        <type>entry</type>
    </formElement>
    <formElement>
        <label>VM Role VM name:</label>
        <property>vm_role_vm_name</property>
        <value/>
        <documentation>WAP privkey</documentation>
        <required>1</required>
        <type>entry</type>
    </formElement>
    <formElement>
        <label>CloudService Name:</label>
        <property>cloudservice_name</property>
        <value/>
        <documentation>CloudService Name</documentation>
        <required>1</required>
        <type>entry</type>
    </formElement>

    <formElement>
        <label>VM Role Name:</label>
        <property>vm_role_name</property>
        <value/>
        <documentation>VM Role Name</documentation>
        <required>1</required>
        <type>entry</type>
    </formElement>

    <formElement>
        <label>VM Role Size</label>
        <property>vm_role_size</property>
        <value/>
        <documentation>VM Role size, for example, ExtraSmall</documentation>
        <required>1</required>
        <type>entry</type>
    </formElement>

